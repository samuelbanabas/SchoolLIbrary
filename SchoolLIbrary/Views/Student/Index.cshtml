
@model StudentDashboardViewModel;
@{
    ViewData["Title"] = "Home";
    Layout = "_StudentLayout";
}
<div class="row">
    <div class="col-md-2 mb-4">
        <div class="card">
            <img src="@Model.ProfileImageUrl" class="card-img-top" alt="Profile Image">
            <div class="card-body mt-2">
                <h5 class="card-title">@Model.User.FirstName @Model.User.LastName</h5>
                <p class="card-text mb-5">@Model.User.RegNo</p>
                <a href="@Url.Action("Edit", "Student", new { id = Model.User.Id })" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Borrowed Books</h5>
            </div>
            <div class="card-body">
                @if (Model.Checkouts.Any())
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Book Title</th>
                                <th>Author</th>
                                <th>Checkout Date</th>
                                <th>Return Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.Checkouts)
                            {
                                <tr>
                                    <td>@book.Material.Title</td>
                                    <td>@book.Material.Author</td>
                                    <td>@book.CheckoutDate.ToShortDateString()</td>
                                    <td>@book.ReturnDate.ToShortDateString()</td>
                                    <td>@book.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No borrowed books</p>
                }
            </div>
        </div>
    </div>
</div>