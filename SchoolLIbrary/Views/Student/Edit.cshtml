@model StudentViewModel

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_StudentLayout";
}

<h3 class="card-header mb-5">Edit Student</h3>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div class="form-group">
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
        {
            <img class="mb-4" src="@Model.ProfileImageUrl" alt="Profile Image" width="120" height="120" />
        }
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNo" class="control-label"></label>
        <input asp-for="PhoneNo" class="form-control" />
        <span asp-validation-for="PhoneNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegNo" class="control-label"></label>
        <input asp-for="RegNo" class="form-control" />
        <span asp-validation-for="RegNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    <input asp-for="UserType" class="form-control" hidden />
    <input asp-for="Username" class="form-control" hidden />
</form>

<style type="text/css">
    .form-group {
        margin-top: 15px;
    }
</style>
